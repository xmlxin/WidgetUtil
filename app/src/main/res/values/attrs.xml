<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--跑马灯-->
    <declare-styleable name="MarqueeView">
        <attr name="textcolor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="isRepeat" format="boolean" />
        <attr name="speed" format="integer"/>
        <attr name="startPoint" format="integer">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
        </attr>
        <attr name="direction" format="integer">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <!--下雨-->
    <declare-styleable name="RainView">
        <attr name="rainNum" format="integer" />
        <attr name="randColor" format="boolean" />
        <attr name="size" format="integer" />
        <attr name="rainColor" format="integer" />
    </declare-styleable>

    <!---->
    <declare-styleable name="custume_ripple_imageview">
        <attr name="show_spacing_time" format="integer"></attr>
        <attr name="imageViewWidth" format="dimension"></attr>
        <attr name="imageViewHeigth" format="dimension"></attr>
    </declare-styleable>

</resources>
