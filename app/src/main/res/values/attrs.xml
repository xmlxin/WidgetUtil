<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--跑马灯-->
    <declare-styleable name="MarqueeView">
        <attr name="textcolor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="isRepeat" format="boolean" />
        <attr name="speed" format="integer"/>
        <attr name="startPoint" format="integer">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
        </attr>
        <attr name="direction" format="integer">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <!--下雨-->
    <declare-styleable name="RainView">
        <attr name="rainNum" format="integer" />
        <attr name="randColor" format="boolean" />
        <attr name="size" format="integer" />
        <attr name="rainColor" format="integer" />
    </declare-styleable>

    <!--水波纹-->
    <declare-styleable name="custume_ripple_imageview">
        <attr name="show_spacing_time" format="integer"></attr>
        <attr name="imageViewWidth" format="dimension"></attr>
        <attr name="imageViewHeigth" format="dimension"></attr>
    </declare-styleable>

    <!--edit动态输入-->
    <declare-styleable name="BiuEditStyle">
        <attr name="biu_text_color" format="color" />
        <attr name="biu_text_start_size" format="dimension" />
        <attr name="biu_text_scale" format="float" />
        <attr name="biu_duration" format="integer" />
        <attr name="biu_type" format="enum">
            <enum name="flyup" value="0" />
            <enum name="flydown" value="1" />
        </attr>
    </declare-styleable>

    <!--randomTextView-->
    <declare-styleable name="RandomShowTextView">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="duration" format="integer" />
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="RandomShowTextViewStyle" format="reference" />
    </declare-styleable>

    <!--自动换行-->
    <declare-styleable name="AutoNewLineLayout">
        <attr name="horizontalSpace" format="dimension|reference"/>
        <attr name="vertivalSpace" format="dimension|reference"/>
    </declare-styleable>

</resources>
